

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>

<%@post.comments.each do |comment|%>

  <%=comment.content%>
  &nbsp &nbsp  
  <%= link_to '삭제', post_comment_path(@post.id,comment.id), method: 'delete'%><br>
<% end%>

<%=form_for Comment.new, url:post_comments_path(@post.id) do |f|%>
  <%=f.label "댓글"%>
  
  <%=f.text_field :content, size: 60;%>  
  <%=f.submit '작성'%>
<% end %>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
